    group: 'group1'
    size_hint: None, None
    size: dp(48), dp(48)
	theme_text_color: "Custom"
	selected_color: rgba('#C0DEE5')

<Check2@MDCheckbox>:
    group: 'group2'
    size_hint: None, None
    size: dp(48), dp(48)
	theme_text_color: "Custom"
	selected_color: rgba('#C0DEE5')

<Check3@MDCheckbox>:
    group: 'group3'
    size_hint: None, None
    size: dp(48), dp(48)
	theme_text_color: "Custom"
